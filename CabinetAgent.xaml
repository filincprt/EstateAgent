<Page x:Class="EstateAgent.CabinetAgent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EstateAgent"
      mc:Ignorable="d" 
      Background="#F7F9F9"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CabinetAgent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"  />
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Background="#ECEFF1" Grid.Row="0" Grid.ColumnSpan="2"></Border>
        <Image Source="Resources/logo.png" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="324,5,0,5" Width="161" RenderTransformOrigin="0.696,0.484"></Image>
        <Button x:Name="EnterBtnBack"  Content="Выйти" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Center" Style="{StaticResource FlatButtonStyle}" Click="ExitBtn_Click" Grid.Column="1"/>
        <Label Grid.ColumnSpan="2" Content="Кабинет риелтора" HorizontalAlignment="Left" Margin="303,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Roboto Black" FontSize="22"/>
    </Grid>
</Page>
